<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MuseumDetailActivity">

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/museum"
        android:contentDescription="Photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/img_photo"
        android:text="nama museum "
        android:id="@+id/txt_name"
        android:gravity="left"
        style="@style/AppTheme.TextView"
        android:textSize="19sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="186dp" />
    <TextView
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        android:id="@+id/txt_provinsil"
        android:text="Provinsi"
        android:gravity="left"
        style="@style/AppTheme.TextView"
        android:textSize="19sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="186dp" />

    <TextView
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/txt_provinsil"
        android:id="@+id/txt_alamat"
        android:textSize="19sp"
        android:text="alamat"
        android:gravity="left"
        style="@style/AppTheme.TextView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="314dp" />
    <TextView
        android:id="@+id/txt_pengelola"
        android:textSize="19sp"
        android:gravity="left"
        android:layout_marginTop="30dp"
        android:text="pengola"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="314dp"
        app:layout_constraintTop_toBottomOf="@id/txt_alamat"
        style="@style/AppTheme.TextView"/>
    <TextView
        android:id="@+id/txt_kota"
        android:layout_marginTop="30dp"
        android:textSize="19sp"
        android:text="Kota"
        android:gravity="left"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="314dp"
        app:layout_constraintTop_toBottomOf="@id/txt_pengelola"
        style="@style/AppTheme.TextView"/>
    <TextView
        android:id="@+id/txt_kecamatan"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints"
        android:textSize="19sp"
        android:gravity=""
        android:text="kecamatan"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="314dp"
        app:layout_constraintTop_toBottomOf="@id/txt_kota"
        style="@style/AppTheme.TextView"/>


    <ProgressBar
        android:id="@+id/progressDetailMovie"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>